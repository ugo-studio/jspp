{
  "name": "@ugo-studio/jspp",
  "version": "0.1.7",
  "description": "A modern transpiler that converts JavaScript code into high-performance, standard C++23.",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "jspp": "dist/cli.js"
  },
  "files": [
    "dist",
    "src/prelude"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "typecheck": "tsc --noEmit",
    "precompile": "bun run scripts/precompile-headers.ts",
    "test": "bun test",
    "build": "tsc",
    "prepack": "bun run build",
    "publish:npm": "npm publish --access=public"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "author": "Ugochukwu David",
  "license": "MIT",
  "homepage": "https://github.com/ugo-studio/jspp/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ugo-studio/jspp.git"
  },
  "bugs": {
    "url": "https://github.com/ugo-studio/jspp/issues"
  }
}